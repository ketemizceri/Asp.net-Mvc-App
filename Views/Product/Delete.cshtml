@model Abc.MvcWebUI.Entity.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-body text-center">

                    <h3 class="text-danger mb-4">
                        <i class="fas fa-exclamation-triangle"></i> Ürünü silmek istediğinizden emin misiniz?
                    </h3>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold text-right">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8 text-left">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-danger mr-2">
                                <i class="fas fa-trash-alt"></i> Sil
                            </button>
                            @Html.ActionLink("Ürün Kontrol", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>