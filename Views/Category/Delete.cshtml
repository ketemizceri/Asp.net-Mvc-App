@model Abc.MvcWebUI.Entity.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-body text-center">

                    <h2 class="text-danger mb-3">
                        <i class="fas fa-exclamation-triangle"></i> Kategoriyi silmek istediğinize emin misiniz?
                    </h2>
                    <p class="text-muted mb-4">Bu işlem geri alınamaz.</p>
                    <hr />

                    <dl class="row justify-content-center">
                        <dt class="col-sm-4 font-weight-bold text-right">Kategori Adı</dt>
                        <dd class="col-sm-6 text-left">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 font-weight-bold text-right">Açıklama</dt>
                        <dd class="col-sm-6 text-left">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-danger mr-2">
                                <i class="fas fa-trash-alt"></i> Sil
                            </button>
                            @Html.ActionLink("Kategori Liste", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>