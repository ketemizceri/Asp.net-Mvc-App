@model Abc.MvcWebUI.Models.OrderDetailsModel
@using Abc.MvcWebUI.Entity;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}






<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <h2 style="text-align:center">
                        <i class="fas fa-receipt"></i> Sipariş Detay Bilgileri
                    </h2>
                    <hr />

                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["message"]
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">👤 Kullanıcı Adı</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4 font-weight-bold">📦 Sipariş Durumu</dt>
                        <dd class="col-sm-8">
                            @using (Html.BeginForm("UpdateOrderState", "Order", FormMethod.Post))
                            {
                                @Html.HiddenFor(i => i.OrderId)
                                <div class="form-row">
                                    <div class="col-md-8">
                                        @Html.EnumDropDownListFor(i => i.OrderState, "Sipariş Durumunu Seç", new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-primary btn-block mt-2 mt-md-0">
                                            <i class="fas fa-sync-alt"></i> Güncelle
                                        </button>
                                    </div>
                                </div>
                            }
                        </dd>

                        <dt class="col-sm-4 font-weight-bold">🆔 Sipariş ID</dt>
                        <dd class="col-sm-8">@Model.OrderId</dd>

                        <dt class="col-sm-4 font-weight-bold">🔢 Sipariş No</dt>
                        <dd class="col-sm-8">@Model.OrderNumber</dd>

                        <dt class="col-sm-4 font-weight-bold">💳 Toplam Tutar</dt>
                        <dd class="col-sm-8">
                            <i class="fa fa-try text-success"></i> @Model.Total
                        </dd>

                        <dt class="col-sm-4 font-weight-bold">📅 Sipariş Tarihi</dt>
                        <dd class="col-sm-8">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-4 font-weight-bold">📍 Teslimat Adresi</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.AdresBasligi</strong>
                            <hr />
                            @Model.Adres<br />
                            @Model.Sehir - @Model.Ilce - @Model.Mahalle<br />
                            @Model.PostaKodu
                        </dd>

                        <dt class="col-sm-4 font-weight-bold">🛒 Sipariş Edilen Ürünler</dt>
                        <dd class="col-sm-8">

                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead class="thead-light text-center">
                                        <tr>
                                            <th>Görsel</th>
                                            <th>Ürün Adı</th>
                                            <th>Adet</th>
                                            <th>Birim Fiyat</th>
                                            <th>Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderLines)
                                        {
                                            <tr class="text-center">
                                                <td>
                                                    <img src="~/Upload/@item.Image" width="70" class="img-thumbnail" />
                                                </td>
                                                <td>@item.ProductName</td>
                                                <td>@item.Quantity</td>
                                                <td>
                                                    <i class="fa fa-try" aria-hidden="true"></i> @item.Price
                                                </td>
                                                <td>
                                                    <a href="/Home/Details/@item.ProductId" class="btn btn-info btn-sm" target="_blank">
                                                        <i class="fas fa-external-link-alt"></i> Detay
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </dd>
                    </dl>

                </div>
            </div>

        </div>
    </div>

</div>
